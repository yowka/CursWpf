<Window x:Class="CursWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CursWpf"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="MainWindow" Height="720" Width="1400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            
        </Grid.ColumnDefinitions>

        <Grid Background="Black" Grid.Row="0" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.3*"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="0.14*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Style="{DynamicResource ButtonZero}" Height="70" HorizontalAlignment="Center" Background="Transparent" Click="Button_Click">
                <Image Source="/Images/logo-rem.png"></Image>
            </Button>
            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Orientation="Horizontal">
                <Button Style="{DynamicResource ButtonZero}" Click="Click_Employee" x:Name="employee" Background="Transparent" Margin="10" FontSize="24" Foreground="White" Content="Персонал" Visibility="Collapsed"/>
                <Button Style="{DynamicResource ButtonZero}" Click="Click_Sale" x:Name="sale" Background="Transparent" Margin="10" FontSize="24" Foreground="White" Content="Отчёт о продаже" Visibility="Collapsed"/>
                <Button Style="{DynamicResource ButtonZero}" Click="Click_Tables" x:Name="tables" Background="Transparent" Margin="10" FontSize="24" Foreground="White" Content="Управление таблицами" Visibility="Collapsed"/>
                <Button Style="{DynamicResource ButtonZero}" Background="Transparent" Margin="10" FontSize="24" Foreground="White" Content="Каталог" Click="Button_Catalog"/>
            </StackPanel>
            <Button Click="Button_Profile" Style="{DynamicResource ButtonZero}" Background="Transparent" Height="60" HorizontalAlignment="Center" Grid.Column="2">
                <Border CornerRadius="170">
                    <Image Width="60" Height="60" Stretch="UniformToFill" x:Name="ProfileImage" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Image.Clip>
                            <EllipseGeometry RadiusX="30" RadiusY="30" Center="30,30"/>
                        </Image.Clip>
                        <Image.Source>
                            <BitmapImage UriSource="images/addphoto.png"/>
                        </Image.Source>
                    </Image>
                </Border>
            </Button>
        </Grid>

        <Grid Grid.Row="1">
            <Frame Name="frame" NavigationUIVisibility="Hidden" />
        </Grid>
        
    </Grid>

</Window>
