<Window x:Class="CursWpf.WindowRegistration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CursWpf"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="{x:Null}"
        Title="WindowRegistration" Height="600" Width="450"
        KeyDown="Window_KeyDown">

    <Grid>
        <Border Height="600" Width="450" Background="#272B2F" CornerRadius="20" Opacity="0.95">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Opacity="0.5" ShadowDepth="5"/>
            </Border.Effect>
        </Border>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>

            <Button BorderBrush="Transparent" Click="Button_Close" Height="40" Width="40" 
                    HorizontalAlignment="Right" Background="Transparent" VerticalAlignment="Top" Margin="8">
                <Image Source="images/крест простой.png"/>
            </Button>

            <Image Width="260" Height="120" Source="images/logo-rem.png" Grid.Row="0" VerticalAlignment="Center"/>

            <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Content="Имя" FontSize="16" Foreground="#AAAAAA" Margin="0 0 0 5"/>
                <TextBox x:Name="txtName" Width="300" Height="40" Background="#1E2125" 
                         Foreground="White" BorderBrush="#4E5257" BorderThickness="1" 
                         FontSize="16" Padding="10" CaretBrush="White"/>
            </StackPanel>

            <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Content="Фамилия" FontSize="16" Foreground="#AAAAAA" Margin="0 0 0 5"/>
                <TextBox x:Name="txtSurname" Width="300" Height="40" Background="#1E2125" 
                         Foreground="White" BorderBrush="#4E5257" BorderThickness="1" 
                         FontSize="16" Padding="10" CaretBrush="White"/>
            </StackPanel>

            <StackPanel Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Content="Логин" FontSize="16" Foreground="#AAAAAA" Margin="0 0 0 5"/>
                <TextBox x:Name="txtLogin" Width="300" Height="40" Background="#1E2125" 
                         Foreground="White" BorderBrush="#4E5257" BorderThickness="1" 
                         FontSize="16" Padding="10" CaretBrush="White"/>
            </StackPanel>

            <StackPanel Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Content="Пароль" FontSize="16" Foreground="#AAAAAA" Margin="0 0 0 5"/>
                <PasswordBox x:Name="txtPassword" Width="300" Height="40" Background="#1E2125"
                             Foreground="White" BorderBrush="#4E5257" BorderThickness="1"
                             FontSize="16" Padding="10" VerticalContentAlignment="Center"/>
            </StackPanel>

            <Button Grid.Row="5" Content="Регистрация" Width="300" Height="45" Margin="0 20 0 0"
                    Background="#3A3F45" Foreground="White" BorderBrush="#4E5257" 
                    FontSize="18" FontWeight="Medium" Cursor="Hand"
                    Click="Registration_CLick"/>

            <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Foreground="#AAAAAA" VerticalAlignment="Center" FontSize="14" Margin="0 0 10 0">
                    Уже есть аккаунт?
                </TextBlock>
                <Button Content="Вход" Background="Transparent" Foreground="#4A90E2"
                        BorderThickness="0" FontSize="14" FontWeight="Medium" Cursor="Hand"
                        Click="Login_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>